<div class="addresses">
  <% @addresses.each do |address| %>
    <div class="address">
      <div class="upper-address">
        <div class="address-date">
          <%= address.created_at %>
        </div>
      </div>
      <div class="lower-address">
        <div class="address-content">
          <%= address.departure %> → <%= address.destination_1 %> → <%= address.destination_2 %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%# 検索フォーム%>
<%= link_to new_address_path, class: 'purchase-btn' do %>
   <div class="user_nav grid-6">
      <a class="post" href="/addresses/new">調べる</a>
    </div>
<% end %>